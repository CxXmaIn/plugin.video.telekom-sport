<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.telekom-sport" version="1.0.0" name="Telekom Sport" provider-name="asciidisco">
    <requires>
        <import addon="xbmc.python" version="2.24.0"/>
        <import addon="script.module.pydes" version="2.0.1"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.requests" version="2.12.4"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <assets>
            <icon>resources\icon.png</icon>
            <fanart>resources\fanart.jpg</fanart>
            <screenshot>resources\screen_1.png</screenshot>
            <screenshot>resources\screen_2.png</screenshot>
            <screenshot>resources\screen_3.png</screenshot>            
        </assets>
        <summary lang="de_DE">Telekom Sport</summary>
        <description lang="de_DE">Telekom Sport ist ein Portal für Live Eishockey, Basketball, 3. Liga &amp; Frauenfußball Bundesliga Übertragungen.</description>
        <disclaimer lang="de_DE">Inoffizielles Addon - Benutzung auf eigene Gefahr</disclaimer>
        <summary lang="en_GB">Telekom Sport</summary>
        <description lang="en_GB">Telekom Sport is a portal for live Icehockey, Basketball, German 3rd Ligue &amp; womans football matches.</description>
        <disclaimer lang="en_GB">Unofficial Addon - Use at your own risk</disclaimer>
        <platform>all</platform>
        <license>MIT</license>
        <website>https://www.telekomsport.de/</website>
        <email>[public] at [asciidisco] dot [com]</email>
        <source>https://github.com/asciidisco/plugin.video.telekom-sport</source>
        <news>
Initial Release
        </news>        
    </extension>    
</addon>